<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.fiuba.redsocedu.datalayer.dtos">

    <class name="Usuario" table="usuarios">
        <id name="usuarioId" column="usuario_id">
            <generator class="native"/>
        </id>
        <property name="username" column="username"/>
        <property name="password" column="password"/>
        <property name="nombre" column="nombre"/>
        <property name="apellido" column="apellido"/>
        <property name="padron" column="padron"/>
        <property name="email" column="email"/>
        <property name="fechaNac" column="fecha_nac"/>
        <property name="activado" column="activado"/>
        <property name="habilitado" column="habilitado"/>
    </class>

</hibernate-mapping>